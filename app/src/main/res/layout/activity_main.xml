<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <Button
            android:id="@+id/cls"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray1"
            android:text="C"/>
        <Button
            android:id="@+id/open"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray1"
            android:text="("/>
        <Button
            android:id="@+id/close"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray1"
            android:text=")"/>
        <Button
            android:id="@+id/div"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray3"
            android:text="/"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <Button
            android:id="@+id/one"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="1"/>
        <Button
            android:id="@+id/two"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="2"/>
        <Button
            android:id="@+id/three"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="3"/>
        <Button
            android:id="@+id/mul"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray3"
            android:text="*"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <Button
            android:id="@+id/four"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="4"/>
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="5"/>
        <Button
            android:id="@+id/six"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="6"/>
        <Button
            android:id="@+id/sub"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray3"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <Button
            android:id="@+id/seven"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="7"/>
        <Button
            android:id="@+id/eight"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="8"/>
        <Button
            android:id="@+id/nine"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="9"/>
        <Button
            android:id="@+id/add"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray3"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
        <Button
            android:id="@+id/point"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="44dp"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="."/>
        <Button
            android:id="@+id/zero"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="44dp"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="0"/>
        <Button
            android:id="@+id/del"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray2"
            android:text="del"/>
        <Button
            android:id="@+id/equator"
            android:onClick="oneOnClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:background="@drawable/selector_gray3"
            android:text="="/>
    </LinearLayout>
</LinearLayout>
